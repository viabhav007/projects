name = input("Type your name: ")
print("Welcome", name, "to this adventure!")

answer = input("You are on a dirt road, it has come to an end you can either go left or right. Which way would you like to go? ")

if answer == "left":
    answer = input("You come to a river, you can either take a walk or swim across? Type walk to walk around and swim to swim across")
    if answer == "swim":
        print("You swam across and got eaten by a shark.")
    elif answer == "walk":
        print("You walked for many miles and ran out of water and died.")
    else:
        print("Not a valid option. You lost")

elif answer == "right":
    answer = input("You come to a bridge, it looks wobbly, do you want to cross it or head back(cross/back)? ")
    if answer == "back":
        print("You go back and lose!")
    elif answer == "cross":
        answer = input("You cross the bridge and meet a stranger. Would like to talk to him(yes/no)? ")
        if answer == "yes":
            print("You talk to the stranger and they give you gold and you've have won!")
        elif answer == "no":
            print("You lost, haha!")
        else:
            print("Not a valid option. You lose")
    else:
        print("Not a valid option. You lose")
else:
    print("Not a valid option. You lose")
